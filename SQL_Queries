SECTION 1 – BASIC ANALYSIS 

1️. Total number of rides in the dataset.
SELECT * FROM ola_dataset1;
SELECT count(Customer_ID)
FROM ola_dataset1 ;

2️. Total number of successful rides.
SELECT COUNT(Booking_Status) FROM ola_dataset1 WHERE Booking_Status='Success';

3️. Total number of cancelled rides.
SELECT COUNT(Booking_Status) FROM ola_dataset1 WHERE Booking_Status !='Success';
4️. Total revenue generated.
SELECT SUM(Ride_Revenue) AS total_revenue
FROM ola_dataset1;
5️. Average ride distance across all rides.
SELECT AVG(Ride_Distance) , AVG(Customer_Rating) , count(Booking_Status) FROM ola_dataset1 WHERE Booking_Status='Success';
6️. Average customer rating for successful rides only.
SELECT AVG(Ride_Distance) , AVG(Customer_Rating) , count(Booking_Status) FROM ola_dataset1 WHERE Booking_Status='Success';
7️. Count of rides per booking status.
SELECT AVG(Ride_Distance) , AVG(Customer_Rating) , count(Booking_Status) FROM ola_dataset1 WHERE Booking_Status='Success';

SECTION 2 – VEHICLE ANALYSIS
8️. Total revenue generated by each vehicle type.
SELECT Vehicle_Type, SUM(Ride_Revenue) AS total_revenue FROM ola_dataset1 GROUP BY(Vehicle_Type);
9️. Average ride distance per vehicle type.
SELECT Vehicle_Type ,AVG(Ride_Distance) FROM ola_dataset1 GROUP BY Vehicle_Type;
10. Which vehicle type has the highest number of successful rides?
SELECT Vehicle_Type , count(Booking_Status) AS Successfull_Rides FROM ola_dataset1 WHERE Booking_Status ='Success'  GROUP BY Vehicle_Type;

1️1️. Cancellation rate per vehicle type.
SELECT Vehicle_Type , count(Booking_Status) AS Successfull_Rides FROM ola_dataset1 WHERE Booking_Status !='Success'  GROUP BY Vehicle_Type;

SECTION 3 – PAYMENT ANALYSIS
1️2. Total revenue generated by each payment method.
SELECT Payment_Method, 
       SUM(Ride_Revenue) AS revenue
FROM ola_dataset1
GROUP BY Payment_Method;
1️3️. Most frequently used payment method.
SELECT Payment_Method , count(Ride_Revenue) AS Total_Revenue FROM ola_dataset1 GROUP BY Payment_Method;
1️4️. Average ride revenue per payment method.
SELECT Payment_Method , AVG(Ride_Revenue) AS Average_Revenue FROM ola_dataset1 GROUP BY Payment_Method;

SECTION 4 – CUSTOMER ANALYSIS
1️5️. Top 5 customers by total revenue spent.
SELECT Customer_ID , Ride_Revenue FROM ola_dataset1 ORDER BY Ride_Revenue DESC LIMIT 5;
16.Average customer rating given per vehicle type.
SELECT Customer_ID , AVG(Customer_Rating) FROM ola_dataset1 GROUP BY Customer_ID;
 SECTION 5 – DRIVER ANALYSIS
1️9️. Total cancelled rides by drivers.
SELECT COUNT(*) AS driver_cancelled
FROM ola_dataset1
WHERE Canceled_Rides_by_Driver = 1;
2️0️. Average driver rating per vehicle type.
SELECT Customer_ID , AVG(Driver_Rating) FROM ola_dataset1 GROUP BY Customer_ID;
2️1️. Vehicle type with lowest average driver rating.
SELECT Vehicle_Type , MIN(Driver_Rating) FROM ola_dataset1 GROUP BY Vehicle_Type;

SECTION 6 – CANCELLATION & INCOMPLETE ANALYSIS
2️2️. Overall cancellation percentage.
SELECT 
ROUND(
    SUM(CASE WHEN Booking_Status != 'Success' THEN 1 ELSE 0 END) * 100.0 
    / COUNT(*), 2
) AS cancellation_percentage
FROM ola_dataset1;
2️3️. Cancellation percentage by customer vs driver.
SELECT 
       (count(Canceled_Rides_by_Customer) * 100.0 / (
            SELECT count(Booking_Status)
            FROM ola_dataset1
       )) AS Cancellation_percentage_BY_Customer,
       (count(Canceled_Rides_by_Driver) * 100.0 / (
            SELECT count(Booking_Status)
            FROM ola_dataset1
       )) AS Cancellation_percentage_BY_Driver   

SECTION 7 – TIME ANALYSIS
2️4. Total rides per month.
SELECT 
    DATE_FORMAT(Ride_Date, '%Y-%m') AS month,
    COUNT(*) AS total_rides
FROM ola_dataset
GROUP BY DATE_FORMAT(Ride_Date, '%Y-%m')
ORDER BY month;
2️5. Total revenue per month.
SELECT 
    DATE_FORMAT(Ride_Date, '%Y-%m') AS month,
    SUM(Ride_Revenue) AS total_revenue
FROM ola_dataset
GROUP BY DATE_FORMAT(Ride_Date, '%Y-%m')
ORDER BY month;
2️6. Day of week with highest rides.
SELECT 
    DAYNAME(Ride_Date) AS day_name,
    COUNT(*) AS total_rides
FROM ola_dataset
GROUP BY DAYNAME(Ride_Date)
ORDER BY total_rides DESC;
2️7. Average revenue per day.
SELECT 
    Ride_Date,
    AVG(Ride_Revenue) AS avg_revenue_per_day
FROM ola_dataset
GROUP BY Ride_Date
ORDER BY Ride_Date;
